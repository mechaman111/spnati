<?xml version='1.0' encoding='UTF-8'?>
<costume>
    <id>emi_shadow</id>
    <label>Emi</label>
    <tags>
        <tag>alternative_skin</tag>
        <tag>amber_eyes</tag>
        <tag>black_hair</tag>
        <tag remove="true">blonde</tag>
        <tag remove="true">butt_pose</tag>
        <tag remove="true">cheerful</tag>
        <tag from="0" to="1">choker</tag>
        <tag>exotic_eyes</tag>
        <tag remove="true">fair-skinned</tag>
        <tag>goth</tag>
        <tag remove="true">green_eyes</tag>
        <tag>halloween_skin</tag>
        <tag>indifferent</tag>
        <tag>pale-skinned</tag>
        <tag from="4" to="5">pubic_hair_peek</tag>
        <tag remove="true">school_uniform</tag>
        <tag from="4" to="5">thong</tag>
    </tags>
    <folder>opponents/reskins/emi_shadow/</folder>
    <wardrobe>
        <clothing name="prosthetic legs" position="legs" type="major" plural="true" />
        <clothing name="socks" generic="socks" position="legs" type="minor" plural="true" />
        <clothing name="panties" generic="underwear" position="lower" type="important" plural="true" />
        <clothing name="top" generic="shirt" position="upper" type="important" />
        <clothing name="skirt" generic="skirt" position="lower" type="major" />
        <clothing name="jacket" generic="jacket" position="upper" type="major" />
        <clothing name="choker" generic="collar" position="neck" type="extra" />
        <clothing name="boots" generic="shoes" position="feet" type="extra" plural="true" />
    </wardrobe>

    <poses>
        <pose id="ghost_boot">
            <sprite id="stripping" z="2" src="emi/lemon/ghost.png" x="0" y="0" />
            <sprite id="Boots" z="2" src="emi/lemon/Boots.png" x="0" y="0" alpha="100" />
            <sprite id="shadow" src="emi/lemon/shadow.png" x="0" y="0" />
            <sprite id="BootsInside" src="emi/lemon/BootsInside.png" x="0" y="0" alpha="100" />
            <directive type="animation" id="stripping" ease="ease-in-out-cubic" interpolation="linear">
                <keyframe time="0" x="0" y="0" />
                <keyframe time="2" x="1" y="-250" />
                <keyframe time="3.5" x="0" />
            </directive>
            <directive type="animation" id="stripping" delay="2" ease="ease-in-out-cubic" interpolation="linear">
                <keyframe time="0" y="-250" />
                <keyframe time="1.5" y="-250" />
                <keyframe time="4.5" y="0" />
            </directive>
            <directive type="animation" id="Boots" ease="smooth" interpolation="linear">
                <keyframe time="0" x="0" y="0" alpha="100" />
                <keyframe time="2.25" alpha="100" />
                <keyframe time="3.25" alpha="0" />
            </directive>
            <directive type="animation" id="BootsInside" ease="smooth" interpolation="linear">
                <keyframe time="0" x="0" y="0" alpha="100" />
                <keyframe time="2.25" alpha="100" />
                <keyframe time="3.25" alpha="0" />
            </directive>
        </pose>
    </poses>
</costume>
