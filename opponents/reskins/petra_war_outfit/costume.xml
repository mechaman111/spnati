<?xml version='1.0' encoding='UTF-8'?>
<costume>
    <id>petra_war_outfit</id>
    <label>Petra</label>
    <tags>
        <tag>alternative_skin</tag>
        <tag remove="true">high_heels</tag>
        <tag>jewelry</tag>
        <tag>no_bra</tag>
        <tag>no_underwear</tag>
        <tag remove="true">ponytail</tag>
        <tag remove="true">school_uniform</tag>
    </tags>
    <folder>opponents/reskins/petra_war_outfit/</folder>
    <wardrobe>
        <clothing name="top" generic="shirt" position="upper" type="important" />
        <clothing name="leggings" generic="leggings" position="lower" type="important" plural="true" />
        <clothing name="leather armor" generic="armor" position="upper" type="major" />
        <clothing name="skirt" generic="skirt" position="lower" type="major" />
        <clothing name="bracelets" generic="jewelry" position="arms" type="minor" plural="true" />
        <clothing name="shoes" generic="shoes" position="feet" type="extra" plural="true" />
    </wardrobe>

    <poses>
        <pose id="0-sunglasses">
            <sprite id="calmSmile" src="reskins/petra_war_outfit/0-calmSmile.png" x="0" y="0" scalex="1" scaley="1" alpha="100" />
            <sprite id="sunglasses" delay="0.5" src="petra/sunglasses.png" x="-45" y="-500" scalex="0.4" scaley="0.4" />
            <directive type="animation" id="sunglasses" delay="0.5" ease="ease-out-cubic" interpolation="linear">
                <keyframe time="0" x="-45" y="-500" />
                <keyframe time="3.5" x="-45" y="234" />
            </directive>
        </pose>
        <pose id="8-blank" />
        <pose id="3-stripNeg_animated">
            <sprite id="3-stripPlus" src="reskins/petra_war_outfit/3-stripNeg.png" x="0" y="0" />
            <directive type="animation" id="3-stripPlus" ease="linear" interpolation="none">
                <keyframe time="0" src="reskins/petra_war_outfit/3-stripNeg.png" />
                <keyframe time="1.5" src="reskins/petra_war_outfit/3-stripNegB.png" />
            </directive>
        </pose>
        <pose id="3-stripPlus_animated">
            <sprite id="3-stripPlus" src="reskins/petra_war_outfit/3-stripPlus.png" x="0" y="0" />
            <directive type="animation" id="3-stripPlus" ease="linear" interpolation="none">
                <keyframe time="0" src="reskins/petra_war_outfit/3-stripPlus.png" />
                <keyframe time="1.5" src="reskins/petra_war_outfit/3-stripPlusB.png" />
            </directive>
        </pose>
        <pose id="4-stripPlus_animated">
            <sprite id="4-stripPlus" src="reskins/petra_war_outfit/4-stripPlus.png" x="0" y="0" />
            <directive type="animation" id="4-stripPlus" ease="linear" interpolation="none">
                <keyframe time="0" src="reskins/petra_war_outfit/4-stripPlus.png" />
                <keyframe time="1.5" src="reskins/petra_war_outfit/4-stripPlusB.png" />
            </directive>
        </pose>
    </poses>
</costume>
